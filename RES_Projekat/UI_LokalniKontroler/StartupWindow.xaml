<Window x:Class="UI_LokalniKontroler.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_LokalniKontroler"
        mc:Ignorable="d"
        Title="Connect" Height="200" Width="300" ResizeMode="NoResize" Loaded="OnWindowLoad">
    <Grid>
        <TextBlock Text="Startup" FontSize="40" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="Enter Local Controller Code" FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBox x:Name="textBoxCode" Margin="0,0,0,50" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200"></TextBox>
        <Button Click="btnSubmit" Content="Submit" Margin="100,120,100,20" IsDefault="True"></Button>
    </Grid>
</Window>
