<Window x:Class="UI_LokalniKontroler.AddNewGroupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI_LokalniKontroler"
        mc:Ignorable="d"
        Title="New Group" Height="150" Width="200" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Closed="AddNewGroupClosed">
    <Grid>

        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFE2CD4A" Offset="0"/>
                <GradientStop Color="#FFF9F2C5" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Button Content="Add" BorderThickness="1 1 1 1" Foreground="Black" HorizontalAlignment="Left" Margin="62,73,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Label Content="Name:" Foreground="Black" HorizontalAlignment="Left" Margin="1,18,0,0" VerticalAlignment="Top" Height="30"/>
        <TextBox Name="txt_box_kod" Height="30" Margin="50,18,10,73" TextWrapping="Wrap"/>
    </Grid>
</Window>
